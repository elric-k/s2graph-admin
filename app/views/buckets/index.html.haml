%p#notice= notice
%h3 Listing Buckets
%table
  %thead
    %tr
      %th Experiment
      %th Uuid mods
      %th Traffic ratios
      %th Http verb
      %th Api path
      %th Uuid key
      %th Uuid placeholder
      %th Request body
      %th Timeout
      %th Impression
      %th Is graph query
%th{:colspan => "3"}
  %tbody
    - @buckets.each do |bucket|
      %tr
        %td= bucket.experiment
        %td= bucket.uuid_mods
        %td= bucket.modular
        %td= bucket.http_verb
        %td= bucket.api_path
        %td= bucket.uuid_key
        %td= bucket.uuid_placeholder
        %td= bucket.request_body
        %td= bucket.timeout
        %td= bucket.impression_id
        %td= bucket.is_graph_query
        %td= link_to 'Show', bucket
        %td= link_to 'Edit', edit_bucket_path(bucket)
        %td= link_to 'Destroy', bucket, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Bucket', new_bucket_path
